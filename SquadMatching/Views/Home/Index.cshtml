@model SquadMatching.Models.CadastroModel;
    <link rel="stylesheet" href="~/css/Home.css" />
@using (Html.BeginForm("Index", "Home", FormMethod.Post))

{
    <div class="login-box justify-content-center">
        <div class="login-form justify-content-center">
            <h1 style="color:rgb(0, 0, 0); margin-left:0px;">BEM VINDO</h1>
            <div class="input-group">

                @Html.EditorFor(model => model.Login, new
           {
               htmlAttributes =
                                              new
                                              {
                                                  @class = "txtb",
                                                  placeholder = "Login",
                                                  autofocus = true,
                                                  required = "required"






                                              }
           })
                @Html.ValidationMessageFor(model => model.Login, "",
                                              new { @class = "text-danger" })
            </div>
            <div style="margin-bottom: 25px" class="input-group">

                @Html.EditorFor(model => model.Senha, new
           {
               htmlAttributes =
                                     new
                                     {
                                         @id = "senha",
                                         @class = "txtb",
                                         placeholder = "Senha",
                                         autofocus = true,
                                         required = "required"
                                     }
           })
                @Html.ValidationMessageFor(model => model.Senha, "",
                                     new { @class = "text-danger" })
            </div>
            @if (ViewBag.Error != null)
            {
                <label>@ViewBag.Error</label>
                <br />
            }

            <button class="login-btn" type="submit" name="" value="Login" style="margin-bottom: 25px">Login</button>
            <br>
            <button class="login-btn" onclick="location.href='@Url.Action("Cadastro","Home")'">Cadastro</button>
          
        </div>
    </div>
   
}






